---
import NavbarSP from "../../components/NavbarSP.astro";
import Layout from "../../layouts/Layout.astro";
import FooterEn from "../../components/FooterEn.astro";
import Image from "astro/components/Image.astro";
import Hero from "../../assets/contacto_hero.png";
import Facebook from "../../assets/facebook.png";
import X from "../assets/x.png";
import Whatsapp from "../../assets/whatsapp.png";
import Youtube from "../assets/youtube.png";
import Instagram from "../../assets/instagram.png";
---

<Layout>
  <main class="overflow-hidden">
    <NavbarSP />

    <section class="relative w-full h-screen">
      <Image class="w-full h-full object-cover" src={Hero} alt="Contact Hero" />
      <div class="absolute inset-0 bg-black/50 z-10"></div>

      <div
        class="mt-28 absolute inset-0 flex flex-col items-center justify-center text-white text-center z-20 px-4"
      >
        <span class="text-sm uppercase tracking-widest text-blue-300 mb-2">
          CONTACT
        </span>
        <h1 class="text-4xl md:text-6xl font-bold drop-shadow-lg">
          Send us a message through any platform
        </h1>
        <p
          class="text-lg md:text-xl font-roboto-regular mt-4 drop-shadow-md max-w-3xl"
        >
          We are a team passionate about transforming ideas into solutions that
          generate real value for companies and industries.
        </p>
      </div>
    </section>

    <section
      id="information"
      class="py-16 px-6 lg:px-20 bg-gradient-to-br from-gray-50 to-blue-50"
    >
      <div class="max-w-6xl mx-auto">
        <!-- Main title -->
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Contact <span class="text-blue-800">Information</span>
          </h2>
          <div class="w-24 h-1 bg-blue-800 mx-auto rounded-full"></div>
        </div>

        <!-- Information grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Direct contact -->
          <div
            class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100"
          >
            <div
              class="flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-6 mx-auto"
            >
              <svg
                class="w-8 h-8 text-blue-800"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3 text-center">
              Contact Us
            </h3>
            <p class="text-gray-600 text-center mb-4">
              You can write to us or call us directly:
            </p>
            <div class="text-center">
              <a
                href="tel:+528448580335"
                class="inline-flex items-center justify-center px-6 py-3 bg-blue-800 text-white font-semibold rounded-full hover:bg-blue-900 transition-colors duration-300 shadow-md hover:shadow-lg"
              >
                <svg
                  class="w-5 h-5 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                +52 (844) 858-0335
              </a>
            </div>
          </div>

          <!-- Business hours -->
          <div
            class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100"
          >
            <div
              class="flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-6 mx-auto"
            >
              <svg
                class="w-8 h-8 text-green-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4 text-center">
              Business Hours
            </h3>
            <div class="space-y-3">
              <div
                class="flex justify-between items-center p-3 bg-gray-50 rounded-lg"
              >
                <span class="font-medium text-gray-700">Monday to Saturday</span
                >
                <span class="text-green-700 font-semibold">08:00 â€“ 17:00</span>
              </div>
              <div
                class="flex justify-between items-center p-3 bg-gray-50 rounded-lg"
              >
                <span class="font-medium text-gray-700">Sunday</span>
                <span class="text-red-600 font-semibold">Closed</span>
              </div>
            </div>
          </div>

          <!-- Social media -->
          <div
            class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 md:col-span-2 lg:col-span-1"
          >
            <div
              class="flex items-center justify-center w-16 h-16 bg-purple-100 rounded-full mb-6 mx-auto"
            >
              <svg
                class="w-8 h-8 text-purple-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4 text-center">
              Follow Us
            </h3>
            <p class="text-gray-600 text-center mb-6">Stay connected with us</p>
            <div class="flex justify-center gap-4">
              <a
                href="https://www.facebook.com/neurovix.nv"
                target="_blank"
                class="group flex items-center justify-center w-12 h-12 hover:scale-125"
              >
                <Image src={Facebook} alt="Facebook" />
              </a>
              <a
                href="https://www.instagram.com/neurovix.nv/"
                target="_blank"
                class="group flex items-center justify-center w-12 h-12 rounded-full hover:scale-125"
              >
                <Image src={Instagram} alt="Instagram" />
              </a>
              <a
                href="https://api.whatsapp.com/send/?phone=528448580335"
                target="_blank"
                class="group flex items-center justify-center w-12 h-12 hover:scale-125"
              >
                <Image src={Whatsapp} alt="Whatsapp" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="mt-20 px-6 lg:px-20 flex flex-col lg:flex-row gap-12 mb-10">
      <div class="lg:w-1/2 space-y-6">
        <iframe
          class="w-full h-64 lg:h-96 rounded-xl shadow-md"
          src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3603.1875124187563!2d-100.94679092548705!3d25.4319938221522!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMjXCsDI1JzU1LjIiTiAxMDDCsDU2JzM5LjIiVw!5e0!3m2!1sen!2smx!4v1749279395663!5m2!1sen!2smx"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
      <div class="lg:w-1/2">
        <h2 class="text-2xl font-semibold mb-6">Contact Form</h2>
        <form
          action="https://api.web3forms.com/submit"
          method="POST"
          class="space-y-4"
        >
          <input
            type="hidden"
            name="access_key"
            value="14837e25-4885-44c6-8e91-15071de43e4a"
          />

          <div class="flex flex-col md:flex-row gap-4">
            <input
              type="text"
              name="nombres"
              placeholder="First Name(s)"
              class="flex-1 border border-gray-300 rounded-lg px-4 py-2"
            />
            <input
              type="text"
              name="apellidos"
              placeholder="Last Name(s)"
              class="flex-1 border border-gray-300 rounded-lg px-4 py-2"
            />
          </div>

          <input
            type="email"
            name="email"
            placeholder="Email address"
            class="w-full border border-gray-300 rounded-lg px-4 py-2"
          />

          <select
            name="asunto"
            class="w-full border border-gray-300 rounded-lg px-4 py-2"
          >
            <option value="">Select a subject</option>
            <option value="cotizacion">Quote</option>
            <option value="demo">Request a demo</option>
          </select>

          <textarea
            name="mensaje"
            placeholder="Your message"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 h-32 resize-none"
          ></textarea>

          <button
            type="submit"
            class="w-full bg-blue-800 text-white py-3 rounded-lg hover:bg-blue-900 transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </section>

    <FooterEn />
  </main>
</Layout>
