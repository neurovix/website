---
import Layout from "../../layouts/Layout.astro";
import NavbarSP from "../../components/NavbarSP.astro";
import Hero from "../../assets/hero_image.png";
import Image from "astro/components/Image.astro";
import SoftwareIMG from "../../assets/software.png";
import IA from "../../assets/ia.png";
import ServerIMG from "../../assets/servidor.png";
import Web from "../../assets/web_gray.png";
import Mobile from "../../assets/iphone_gray.png";
import Maintenance from "../../assets/mantenimiento_gray.png";
import Automation from "../../assets/nodos_gray.png";
import ArtificialIntelligence from "../../assets/ia_gray.png";
import Cloud from "../../assets/nube_gray.png";
import FooterEn from "../../components/FooterEn.astro";
---

<Layout>
  <main class="overflow-hidden">
    <NavbarSP />

    <section class="relative w-full h-screen">
      <Image class="w-full h-full object-cover" src={Hero} alt="Hero image" />
      <div class="absolute inset-0 bg-black/50 z-10"></div>
      <div
        class="px-5 lg:px-0 mt-28 absolute inset-0 flex flex-col items-center justify-center text-white text-center z-20"
      >
        <h1 class="text-3xl lg:text-5xl font-bold drop-shadow-lg">
          Software Development and AI Automations
        </h1>
        <p class="text-sm lg:text-xl font-roboto-regular mt-4 drop-shadow-md">
          Boost your company's efficiency with custom software or artificial intelligence
        </p>
        <a
          href="/services"
          class="px-4 py-2 font-roboto-regular rounded-lg bg-blue-800 hover:underline hover:cursor-pointer text-white font-bold mt-5"
        >
          VIEW SERVICES
        </a>
      </div>
    </section>

    <section class="py-20 px-10 bg-white text-gray-900 font-roboto-regular">
      <div
        class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-10 text-center"
      >
        <div class="lg:border-r-2 lg:pr-10">
          <Image
            src={SoftwareIMG}
            class="mx-auto pb-5"
            alt="Software Development"
          />
          <h2 class="text-2xl font-bold mb-4">Software Development</h2>
          <p class="text-base">
            We build custom platforms and systems fully tailored to your company's or institution's needs. From mobile apps and web apps to internal management systems.
          </p>
        </div>
        <div>
          <Image src={IA} class="mx-auto pb-5" alt="AI Automations" />
          <h2 class="text-2xl font-bold mb-4">AI Automations</h2>
          <p class="text-base">
            Save hundreds of hours per month by automating repetitive tasks: report generation, message responses, database updates, and moreâ€”with integrated AI.
          </p>
        </div>
        <div class="lg:border-l-2 lg:pl-10">
          <Image
            src={ServerIMG}
            class="mx-auto pb-5"
            alt="Local AI Installation"
          />
          <h2 class="text-2xl font-bold mb-4">Local AI Installation</h2>
          <p class="text-base">
            We configure language models and AI that run on your own servers or computers, without relying on the cloud. More control, privacy, and no recurring costs.
          </p>
        </div>
      </div>
    </section>

    <section
      class="px-6 md:px-20 py-20 bg-gradient-to-b from-blue-50 to-white font-roboto-regular"
    >
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-12">
          Our Services
        </h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
          <div
            class="bg-white shadow-xl rounded-2xl p-6 hover:shadow-xl transition"
          >
            <Image
              src={Web}
              alt="Web Development"
              class="w-16 h-16 mx-auto mb-4"
            />
            <h2 class="text-xl font-semibold mb-2 text-gray-800">
              Web Development
            </h2>
            <p class="text-sm text-gray-600">
              Fast, secure, and scalable web apps tailored to your business needs.
            </p>
          </div>

          <div
            class="bg-white shadow-xl rounded-2xl p-6 hover:shadow-xl transition"
          >
            <Image
              src={Mobile}
              alt="Mobile Development"
              class="w-16 h-16 mx-auto mb-4"
            />
            <h2 class="text-xl font-semibold mb-2 text-gray-800">
              Mobile Apps
            </h2>
            <p class="text-sm text-gray-600">
              Android and iOS apps with a smooth and professional user experience.
            </p>
          </div>

          <div
            class="bg-white shadow-xl rounded-2xl p-6 hover:shadow-xl transition"
          >
            <Image
              src={Maintenance}
              alt="Technical Support"
              class="w-16 h-16 mx-auto mb-4"
            />
            <h2 class="text-xl font-semibold mb-2 text-gray-800">
              Support & Maintenance
            </h2>
            <p class="text-sm text-gray-600">
              We keep your systems in top condition with reliable tech support.
            </p>
          </div>

          <div
            class="bg-white shadow-xl rounded-2xl p-6 hover:shadow-xl transition"
          >
            <Image
              src={Automation}
              alt="Automation"
              class="w-16 h-16 mx-auto mb-4"
            />
            <h2 class="text-xl font-semibold mb-2 text-gray-800">
              Process Automation
            </h2>
            <p class="text-sm text-gray-600">
              Eliminate repetitive tasks with efficient and customized automations.
            </p>
          </div>

          <div
            class="bg-white shadow-xl rounded-2xl p-6 hover:shadow-xl transition"
          >
            <Image
              src={ArtificialIntelligence}
              alt="AI"
              class="w-16 h-16 mx-auto mb-4"
            />
            <h2 class="text-xl font-semibold mb-2 text-gray-800">
              Artificial Intelligence
            </h2>
            <p class="text-sm text-gray-600">
              Enhance your operations with AI models that learn and optimize your workflow.
            </p>
          </div>

          <div
            class="bg-white shadow-xl rounded-2xl p-6 hover:shadow-xl transition"
          >
            <Image src={Cloud} alt="Cloud" class="w-16 h-16 mx-auto mb-4" />
            <h2 class="text-xl font-semibold mb-2 text-gray-800">
              Local or Cloud Deployment
            </h2>
            <p class="text-sm text-gray-600">
              Deploy solutions on local servers or in the cloud depending on your needs.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section
      class="px-6 md:px-20 py-16 bg-white text-gray-900 font-roboto-regular"
    >
      <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-12">Our Key Products</h2>
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10 text-center"
        >
          <div
            class="bg-blue-100 p-6 rounded-2xl shadow-md hover:shadow-lg transition"
          >
            <h3 class="text-xl font-bold mb-2">Weekly Payroll Generation</h3>
            <p class="text-sm">
              Automate payroll calculation and delivery based on attendance, shifts, and settings.
            </p>
          </div>

          <div
            class="bg-blue-100 p-6 rounded-2xl shadow-md hover:shadow-lg transition"
          >
            <h3 class="text-xl font-bold mb-2">Attendance Tracking</h3>
            <p class="text-sm">
              Manage employee check-ins and check-outs from mobile or tablet with automatic validation.
            </p>
          </div>

          <div
            class="bg-blue-100 p-6 rounded-2xl shadow-md hover:shadow-lg transition"
          >
            <h3 class="text-xl font-bold mb-2">Invoice & Resume Parser</h3>
            <p class="text-sm">
              Extract important data from invoice or resume PDFs and organize it in your database.
            </p>
          </div>

          <div
            class="bg-blue-100 p-6 rounded-2xl shadow-md hover:shadow-lg transition"
          >
            <h3 class="text-xl font-bold mb-2">WhatsApp Chatbots</h3>
            <p class="text-sm">
              Automatically respond to FAQs, generate quotes, or follow up with customers.
            </p>
          </div>
        </div>
      </div>
    </section>

    <FooterEn />
  </main>
</Layout>
